# Create VPC for EKS
module "vpc_main" {
  source          = "terraform-aws-modules/vpc/aws"
  name            = "vpc_main"
  cidr           = "192.168.0.0/18"
  azs             = ["us-east-1a", "us-east-1b", "us-east-1c"]
  public_subnets  = [
    "192.168.0.0/22",
    "192.168.4.0/22",
    "192.168.8.0/22"
  ]
  private_subnets = [
    "192.168.12.0/22",
    "192.168.16.0/22",
    "192.168.20.0/22",
  ]
  # enable_nat_gateway = true
  enable_dns_support = false
  enable_dns_hostnames = true
  map_public_ip_on_launch = true
}
